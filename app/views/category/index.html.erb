<div class="container">
  <h1><%= t :Cate %></h1>
  <% @categories.each do |cate| %>
    <% if cate.name.nil? %>
      <h3><%= link_to t(:missing_name), category_path(id: cate.id) %></h3>
    <% else %>
      <h3><%= link_to cate.name, category_path(id: cate.id) %></h3>
    <% end %>
  <% end %>
  <% @products.each do |product| %>
    <% if product.name.nil? %>
      <p><%= link_to t(:missing_name), "#" %></p>
    <% else %>
      <p><%= link_to product.name, "#" %></p>
    <% end %>
  <% end %>
</div>
