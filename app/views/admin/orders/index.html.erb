<% provide :title, t(:orders) %>
<h3><%= t :orders %></h3>
<div class="row">
  <div class="search-form">
    <%= search_form_for [:admin, @search], class: "form-inline" do |f| %>
      <div class="col-md-3">
        <div class="form-group">
          <%= f.label :status_cont, t(:search) %>
          <%= f.text_field :status_cont, class: "form-control" %>
        </div>
      </div>
      <div class= "col-md-2" >
        <%= f.submit t(:search),
          class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<table class="table table-bordered table-hover text-center">
  <tr>
    <th class="text-center"><%= t :id %></th>
    <th class="text-center"><%= t :status %></th>
    <th class="text-center"><%= t :total_price %></th>
  </tr>
  <tr>
    <%= render @orders %>
  </tr>
</table>
<%= paginate @orders, theme: "twitter-bootstrap-3" %>
<div class="modal order-modal-edit">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="submit" class="close" data-dismiss="modal">
          &times;
        </button>
        <h3><%= t :edit_order %></h3>
      </div>
      <div class="modal-body-order-edit">

      </div>
    </div>
  </div>
</div>
