<div class="container">
<h1><%= t :cart %></h1>
  <%= form_tag @sessions_path, method: :get do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag t(:search), name: nil %>
    </p>
  <% end %>
  <ul>
    <% @product_quantity.each do |product, quantity| %>
      <li>
        <p><%= link_to product.name,
          category_product_path(category_id: product.category_id, id: product.id) %>
        </p>
        <p><%= link_to quantity, "#" %></p>
        <%= form_for :sessions, url: session_path(id: product.id), method: :delete do |f| %>
          <%= f.submit t :delete_cart %>
        <% end %>
        <%= form_for :sessions, url: session_path(id: product.id), method: :patch do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.hidden_field :category_id, value: product.category_id %>
          <%= f.number_field :quantity, min: Settings.product.min_quantity,
            max: product.in_stock, value: Settings.product.min_quantity %>
          <%= f.submit t :update_cart %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
