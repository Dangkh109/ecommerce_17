<div class="container product-border">
  <div class="text-center">
    <h3><%= t :relate_product %></h3>
  </div>
  <div class="row">
    <% @supports.relate.each do |product| %>
      <div class="col-md-2 random-width">
        <%= link_to picture_for(product),
          category_product_path(id: product.id) %>
        <p class="name-product"><%= product.name %></p>
        <p class="price-product">
          <%= product.price %>
          <i class="fa fa-dollar size-icon"></i>
        </p>
      </div>
    <% end %>
  </div>
</div>
