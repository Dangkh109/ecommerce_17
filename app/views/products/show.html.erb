<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= picture_for @product %>
      <button type="button" class="btn btn-info" data-toggle="collapse"
        data-target="#demo"><%= t :Describe %></button>
      <div id="demo" class="collapse">
        <%= @product.description %>
      </div>
    </div>
    <div class="col-md-3 col-md-offset-3">
      <h3><%= t :Detail %></h3>
      <p><%= t :Name  %><%= @product.name %></p>
      <p><%= t :Price %><%= @product.price %></p>
      <p><%= t :In_Stock %></p>
      <p><%= @product.in_stock  %></p>
      <p><%= t :Rate %></p>
      <p><%= @product.rate_average %></p>
      <div>
        <button><%= t :Cart %></button>
      </div>
    </div>
    <div class="col-md-2">
      <% if @supports.hot.present? %>
        <h3><%= t :Hot %></h3>
        <%= link_to picture_for(@supports.hot),
          category_product_path(id: @supports.hot.id) %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="text-center"> <h3> <%= t :Relate_Product %></h3> </div>
  <div class="row">
    <% @supports.relate.each do |prod| %>
      <div class="col-md-2">
      <%= link_to image_tag("miss.png", class: "image-product-bot"),
        category_product_path(id: prod.id) %>
    </div>
    <% end %>
  </div>
  <div class="text-center"><h3><%= t :Randomize %></h3></div>
  <div class="row">
    <% @supports.randomizes.each do |rand| %>
      <div class="col-md-2">
      <%= link_to picture_for(rand), category_product_path(
        category_id: rand.category_id, id: rand.id) %>
      </div>
    <% end %>
  </div>
</div>
